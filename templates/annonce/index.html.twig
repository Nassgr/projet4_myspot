{% extends 'base.html.twig' %}

{% block title %}Admin-Annonces{% endblock %}

{% block body %}
<div class="container">
    <h1>Les Annonces</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Categorie</th>
            <th>Type</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.categorie }}</td>
                <td>{{ annonce.type }}</td>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.price }}</td>
                <td>{{ annonce.city }}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('annonce_admin_show', {'id': annonce.id}) }}">Voir</a>
                </td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('annonce_admin_edit', {'id': annonce.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('annonce_admin_new') }}">Create new</a>
</div>

{% endblock %}