{% extends 'base.html.twig' %}

{% block title %}Admin-Annonces{% endblock %}

{% block body %}
<div class="container">
    <h1>Les Annonces</h1>
    <a class="btn btn-outline-secondary mb-4" href="{{ path('annonce_admin_new') }}">+ Créer une annonce</a>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Catégorie</th>
            <th>Type client</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Ville</th>
            <th>Photo</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.categorie }}</td>
                <td>{{ annonce.type }}</td>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.price }}</td>
                <td>{{ annonce.city }}</td>
                <td>{{ annonce.imageName }}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('annonce_admin_show', {'id': annonce.id}) }}">Voir</a>
                </td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('annonce_admin_edit', {'id': annonce.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'annonce pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}